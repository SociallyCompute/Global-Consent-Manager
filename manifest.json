{
    "manifest_version": 2,
    "name": "__MSG_extension_name__",
    "default_locale": "en",
    "version": "1.7.0",

    "description": "__MSG_extension_description__",
    "homepage_url": "http://www.globalconsentmanager.com/",

    "applications": {
        "gecko": {
            "id": "we@globalconsentmanager.com"
        }
    },

    "permissions": [
        "<all_urls>",
        "cookies",
        "menus",
        "storage",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "src/sites.js",
            "src/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "src/cookie.html"
    },

    "icons": {
        "96": "icon-96.png"
    }
}
